{% extends 'base.html.twig' %}

{% block body %}
	<form action="{{ path('ui_login') }}" method="post" class="needs-validation" novalidate>
		<div class="form-group">
			<label for="username">Email:</label>
			<input type="text" class="form-control" id="username" name="_username">
		</div>

		<div class="form-group mt-3">
			<label for="password">Password:</label>
			<input type="password" class="form-control" id="password" name="_password" required autocomplete="new-password">
		</div>

		{% if error %}
			<div style="color: red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<input type="hidden" name="_target_path" value="{{ path('ui_home') }}">
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<button type="submit" name='submit' class="btn btn-primary mt-3">Log in</button>
	</form>

{% endblock %}
